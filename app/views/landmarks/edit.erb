<h2>Edit Historical Landmark</h2>

    <form method="post" action="/landmarks/<%= @landmark.id %>">
      <input id="hidden" type="hidden" name="_method" value="PATCH">
      Name: <input type="text" name="name" id="landmark[name]" value="<%= @landmark.name %>"/> <br>
      Year Completed: <input type="text" name="year_completed" id="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>"/>

      <input type="submit" value="Edit Landmark">
    </form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
