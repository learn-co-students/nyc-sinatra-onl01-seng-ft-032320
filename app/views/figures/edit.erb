<h2>Edit Historical Figure</h2>
<%= @figure.name %>

    <form method="post" action="/figures/<%= @figure.id %>">
      <input id="hidden" type="hidden" name="_method" value="PATCH">

      Name: <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>"> <br>

      Edit Landmarks: 
      <input type="text" name="new_landmark" id="landmark[name]" /> <br>
      <% Landmark.all.each do |landmark|%>
        <li> <input id="<%= landmark.name %>" value ="<%= landmark.id%>" type="checkbox" name="figure[landmark_ids][]"> <%= landmark.name %> </li>
      <% end %><br>
      <br>

      Edit Titles: 
      <input type="text" name="new_title" id="title[name]" /> 
      <br>
      <% Title.all.each do |title|%>
        <li> <input id="<%= title.name %>" value="<%= title.id %>" type="checkbox" name="figure[title_ids][]"> <%= title.name %> </li>
      <% end %> <br>

      <input type="submit" value="Edit Figure">
    </form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>